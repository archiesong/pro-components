{
  "extends": "@mistjs/tsconfig-vue",
  "include": ["src/**/*"],
  "exclude": ["**/__tests__/*", "lib", "es", "dist", "node_modules"],
  "compilerOptions": {
    "moduleResolution": "bundler",
    "jsxImportSource": "vue",
    "skipLibCheck": true,
    "declaration": true,
    "sourceMap": false,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "noImplicitReturns": true,
    "lib": ["ESNext","DOM"],
    "types": ["vite/client", "node"],
    "paths": {
      "vue-types": ["../../node_modules/vue-types"],
      "swr-vue": ["../../node_modules/swr-vue"],
    }
  }
}
